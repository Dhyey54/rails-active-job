<h2 class="text-center my-5">Sign up</h2>
<div class="container w-50">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :username, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.text_field :username, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :email, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.email_field :email, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :password, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.password_field :password, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :password_confirmation, class: "form-label" %>
      </div>
      <div class="col-6">
        <%= form.password_field :password_confirmation, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="field">
      <%= form.check_box :admin %>
      <%= form.label :admin %>
    </div>
    
    <div class="text-center">
      <%= form.submit "Sign Up", class: "btn btn-success" %>
    </div>

    <div class="text-center my-2">
      <%= render "users/shared/links" %>
    </div>
  <% end %>

</div>
